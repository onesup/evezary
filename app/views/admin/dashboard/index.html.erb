<div class="">참여자 수: <%= User.count %> 건</p>

<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">참여 통계</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
          <thead>
            <tr>
              <th>날짜</th>
              <th>참여자</th>
            </tr>
          </thead>
          <tbody>
            <% time_iterate(Time.now.beginning_of_month, Time.now.end_of_month, 1.day) do |time|%>
              <tr class="">
                <td><%= time.strftime("%m-%d")%></td>
                <td><%= User.daily_count time %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
