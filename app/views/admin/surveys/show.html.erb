<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left"><%= @survey.title %> 투표자 명단 (총 <%= @survey.users.count %>명)</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
          <thead>
            <tr>
              <th>번호</th>
              <th>참여자</th>
              <th>전화번호</th>
              <th>참여일시</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr class="">
                <td>
                  <%= link_to(user.id, nil, title: user.id) %>
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= user.phone %>
                </td>
                <td class="updated_at">
                  <%= user.created_at.strftime("%m.%d %H:%M") %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
